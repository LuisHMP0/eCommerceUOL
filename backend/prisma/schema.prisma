generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  title String 
  subtitle String
  price Float 
  discount Float?
  newProduct Boolean
  imageUrl String?
  description String?
  stock Int 
  categoryId Int? 
  category Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id Int @id @default(autoincrement())
  name String
  products Product[]
}   

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  checkout Checkout[]
}

model Checkout {
  id               String   @id @default(uuid())
  firstName        String
  lastName         String
  companyName      String?
  zipCode          String
  country          String
  streetAddress    String
  city             String
  province         String
  addOnAddress     String?
  emailAddress     String
  additionalInfo   String?
  userId           String   
  user             User     @relation(fields: [userId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
